<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inventario.Maui.Views.LoginPage"
             xmlns:vi="clr-namespace:Inventario.Maui.ViewModels"
             x:DataType="vi:LoginViewModel"
             Title="LoginPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Frame>
            <Entry Text="{Binding Correo}" Placeholder="Nombre de usuario.." BackgroundColor="LightGray" Margin="10,10,10,10">
                
            </Entry>
        </Frame>

        <Frame>
            <Entry Text ="{Binding Contraseña}" Placeholder="contraseña..." IsPassword="True" BackgroundColor="LightGray" Margin="10,10,10,10" >

            </Entry>
        </Frame>

        <Button Text="Ingresar" Command="{Binding LoginCommand}" >

        </Button>

    </VerticalStackLayout>
</ContentPage>