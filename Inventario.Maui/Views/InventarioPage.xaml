<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inventario.Maui.Views.InventarioPage"
             xmlns:vim="clr-namespace:Inventario.Maui.ViewModels"
             xmlns:te="clr-namespace:Inventario.Maui.Views.Templates"
             x:DataType="vim:InventariosViewModel"
             Title="Inventarios">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>

    <VerticalStackLayout>

        <Button Text="Ver inventarios" Command="{Binding ListarInventariosCommand}"></Button>
        <Button Text="Voler al menu" Command="{Binding }"></Button>


        <CollectionView ItemsSource="{Binding Lista_inventarios}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <te:Iventario />
                </DataTemplate>
            </CollectionView.ItemTemplate>
            
        </CollectionView>
        
        
        
        
        
        
    </VerticalStackLayout>
</ContentPage>