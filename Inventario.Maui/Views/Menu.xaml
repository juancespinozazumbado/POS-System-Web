<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inventario.Maui.Views.Menu"
             xmlns:vm ="clr-namespace:Inventario.Maui.ViewModels"
             x:DataType="vm:MenuViewModel"
             Title="Menu">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button Text="Ver Ventas" Command="{Binding VerVentasCommand }" Margin="10,10,10,10"/>
        <Button Text="Ver Inventarios" Command="{Binding VerInventariosCommand }" Margin="10,10,10,10"  />
        <Button Text="Cerrar Secion" Command="{Binding LogOutCommand }" Margin="10,10,10,10"  />

    </VerticalStackLayout>
</ContentPage>