@using Inventario.WebApp.Areas.Ventas.Modelos;
@using Inventario.Models.Dominio.Ventas;
@using Inventario.WebApp.Areas.Ventas.Modelos;
@model VentaEnProcesoViewModel

@{
    ViewData["Title"] = "Articulos";
}

<div class="col-lg-6 mb-5">
    <div class="card">
        <div class="card-header">
            <h4 class="card-heading">Inventario</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                <table class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Inventarios[0].Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Inventarios[0].Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Inventarios[0].Categoria)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Inventarios[0].Cantidad)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Inventarios[0].Precio)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Inventarios)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Categoria)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cantidad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Precio)
                                </td>
                                <td>
                                    <form asp-controller="Ventas" asp-action="AgregarItem" method="post">


                                        <input type="hidden" asp-for="Detalles.Id_venta" value="@Model.venta.Id" />
                                        <input type="hidden" asp-for="Detalles.Id_inventario" value="@item.Id" />
                                        <input type="hidden" asp-for="Detalles.Precio" value="@item.Precio" />

                                        <div style="display:flex; flex-direction: row; width:100%; height:32px;">
                                            <input type="number" asp-for="Detalles.Cantidad" min="1" max="100" step="1" placeholder="Ingrese la cantidad">
                                            <button type="submit" class="btn btn-success btn-sm">+</button>
                                        </div>

                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>