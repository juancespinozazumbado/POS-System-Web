@using Inventario.WebApp.Areas.Ventas.Modelos
@model UsuarioConCajaAbierta

@{
    ViewData["Title"] = "Index";
}

<h1>Apertura de caja</h1>


<div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);" class="container">
    <a class="alert-info">@Model.Usuario.UserName</a>
</div>

@if (!Model.TieneUnaCajaAbierta)
{
    <div class="container">
        <h1 class="jumbotron-heading">¡Bienvenido/a al sistema de ventas!>
        <p>
            <a href="#" class="btn btn-primary my-2">Regresar al inicio</a>
            <a asp-action="AbrirCaja" class="btn btn-secondary my-2">Nueva venta</a>
        </p>
    </div>

}



   
