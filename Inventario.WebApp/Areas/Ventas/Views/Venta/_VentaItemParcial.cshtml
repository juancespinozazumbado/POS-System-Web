@model Inventario.WebApp.Areas.Ventas.Models.VentaParaCrear

@{
    ViewData["Title"] = "IndexVenta";
}

<table class="table">
    <thead>
        <tr>
            
            <th>
               Inventario
            </th>
            <th>
               Precio Unitario
            </th>
            <th>
               Cantidad
            </th>
            <th>
               Monto
            </th>
            <th>
               Monto Decuento
            </th>
            <th>
               Accion
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.venta.VentaDetalles) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.Inventarios.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.MontoDescuento)
            </td>
          
            <td>
                    <form asp-controller="Venta" asp-action="EliminarItem" >
                        <input type="hidden" class="form-control" asp-for="Detalles.Id_venta" value=@Model.venta.Id />
                        <input type="hidden" class="form-control" asp-for="Detalles.Id" value=@item.Id />
                        <input type="hidden" class="form-control" asp-for="Detalles.Id_inventario" value=@item.Id_inventario />


                        <input type="hidden" class="form-control" asp-for="venta" value=@Model.venta />

                        <button type="submit"  class="btn btn-sm">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                            </svg>
                        </button>

                  </form>
            </td>
        </tr>
}
    </tbody>
</table>

