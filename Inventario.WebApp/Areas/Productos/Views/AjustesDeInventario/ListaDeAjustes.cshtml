@model Inventario.Models.Dominio.Productos.Inventarios


<div class="col-lg-6 mb-5">
    <div class="card">
        <div class="card-header">
            <h4>Detalles del producto</h4>

        </div>
        <div class="card-body">
            <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">

                <div>
                    <hr />
                    <dl class="row">


                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>

                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Cantidad)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Cantidad)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Precio)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Precio)
                        </dd>
                    </dl>
                </div>
                <p>Lista de Ajustes</p>
                <div>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Cantidad Anterior
                                </th>
                                <th>
                                    Tipo
                                </th>
                                <th>
                                    Ajuste
                                </th>
                                <th>
                                    Fecha
                                </th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Ajustes)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.CantidadActual)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Tipo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Ajuste)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Fecha)
                                    </td>

                                    <td>
                                           @Html.ActionLink("Detalles", "DetalleAjuste", new { InventarioId=item.Id_Inventario, Id= item.Id  })
                                          

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>
    <a style="margin-block:10px;" class=" btn btn-info" asp-action="Index">Volver al catálogo</a>
</div>
